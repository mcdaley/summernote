-# ----------------------------------------------------------------------------
-# app/views/notes/index.html.haml
-# ----------------------------------------------------------------------------
%div.row
  %div.col-xs-12.col-sm-12.col-md-12.col-lg-12
    %h1{ style: "margin-bottom:0;"} Summernote Note Example
    = link_to 'summernote.org', 'http://summernote.org', target: '_blank', style: "margin-bottom:1.0em;"

%div.row
  %div.col-xs-10.col-sm-10.col-md-10.col-lg-10
    %h4 Add Note
    %div#add-new-task-form
      = render 'form'
    
  %div.col-xs-10.col-sm-10.col-md-10.col-lg-10
    %h4{style: "margin-top:2.0em;"} My Notes
    %hr
    %ul.list-group.note-list
      - @notes.each do |note|
        = render partial: 'note', locals: { note: note }