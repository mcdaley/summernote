-# ----------------------------------------------------------------------------
-# app/views/tasks/index.html.haml
-# ----------------------------------------------------------------------------
%div.row
  %div.col-xs-12.col-sm-12.col-md-12.col-lg-12
    %h1{ style: "margin-bottom:0;"} Summernote Example
    = link_to 'summernote.org', 'http://summernote.org', target: '_blank', style: "margin-bottom:1.0em;"
    
%div.row
  %div.col-xs-12.col-sm-12.col-md-12.col-lg-12
    %div.summernote
  
%div.row
  %div.col-xs-6.col-sm-6.col-md-6.col-lg-6
    %h4 Add Task
    %div#add-new-task-form
      = render 'form'
    
  %div.col-xs-6.col-sm-6.col-md-6.col-lg-6
    %h4 My Tasks
    %label.invisible "hidden label to align tasks with task form"
    %ul.list-group.task-list
      - @tasks.each do |task|
        = render partial: 'task', locals: { task: task }